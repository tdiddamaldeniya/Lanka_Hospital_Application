    <div class="col-md-6 col-lg-6" style="border-width:2px;
border-style:solid;
border-color:black;">
        <form action="/app/registration" method="post">
            
             <div class="form-group row">
                <br>
                <br>
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Hospital Contact ID </label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="text" name="hospitalNumber" required="true" placeholder="Enter Contact no...">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Patient Name</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input id="first-name" class="form-control" style="width: 100%;" type="text" name="firstName" required="true" placeholder="Enter first name...">
                </div>
            </div>

            


            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">NIC</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="text" name="Nic" required="true" placeholder="Enter NIC">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Address</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="text" name="Address" required="true" placeholder="Enter Address">
                </div>
            </div>

            
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Guardian Name</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="text" name="GuardianName" required="true" placeholder="Enter last name...">
                </div>
            </div>

          
           
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Date of birth</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="text" name="dateOfBirth" required="true" placeholder="DD/MM/YYYY">
                </div>
            </div>



         
            <div class="form-group row" >
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Sex</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-primary active" style="margin:0px;">
                            <input id="male-radio" type="radio" name="sex" value="male" autocomplete="off" checked>Male
                        </label>
                        <label class="btn btn-primary" style="margin:0px;">
                            <input id="female-radio" type="radio" name="sex" value="female" autocomplete="off"> Female
                        </label>
                    </div>
                </div>
            </div>

           
              	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="Add patient">

        </form>

        

    </div>





<table id="patients-in-hospital" class="table table-striped table-bordered" cellspacing="0" width="70%" style="border-width:2px;
border-style:solid;
border-color:black;"></table>








